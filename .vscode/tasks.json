    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "type": "cppbuild",
            "label": "check typo",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-g",
                "-march=native",
                "${file}",
                "-fsyntax-only"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
   
    ]
}